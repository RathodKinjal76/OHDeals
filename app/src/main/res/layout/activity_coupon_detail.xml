<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#E0E0E0"
    android:orientation="vertical"
    tools:context="com.example.kinjal.ohdeals.CouponDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgcoupon"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ohdeals_fb" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgcoupon"
                android:background="@android:color/white"
                android:padding="10dp"
                android:text="Description :"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvTnC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescription"
                android:layout_marginTop="15dp"
                android:background="@android:color/white"
                android:padding="10dp"
                android:text="Terms and Conditions :"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTnC"
                android:layout_marginTop="15dp"
                android:background="@android:color/white"
                android:padding="10dp"
                android:text="Expiry :"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvValid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvExp"
                android:layout_marginTop="15dp"
                android:background="@android:color/white"
                android:padding="10dp"
                android:text="Valid :"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvbuy"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/tvValid"
                android:layout_gravity="bottom"
                android:layout_marginTop="15dp"
                android:background="#F8BBD0"
                android:gravity="center"
                android:text="Buy Membership"
                android:textColor="#7f0000"
                android:textSize="20dp" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>