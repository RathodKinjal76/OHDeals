<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kinjal.ohdeals.MembershipIdLogin">

    <ImageView
        android:id="@+id/ohdealslogo"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="39dp"
        android:src="@drawable/login"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtMob"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="21dp"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:layout_below="@+id/edtemail"
        android:layout_alignLeft="@+id/btnsubmit"
        android:layout_alignStart="@+id/btnsubmit" />

    <EditText
        android:id="@+id/edtemail"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:hint="Email"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/ohdealslogo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtmemberid"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:hint="Ohdeals Id"
        android:gravity="center"
        android:inputType="textPersonName"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnsubmit"
        android:layout_alignStart="@+id/btnsubmit" />

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#7f0000"
        android:text="SUBMIT"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/edtmemberid"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
