<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kinjal.ohdeals.Information">

    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:background="#F8BBD0"
        android:paddingLeft="5dp"
        android:paddingTop="4dp"
        android:text="Brand"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#7f0000"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imgcouponinfo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvBrand"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ohdeals_fb" />

    <TextView
        android:id="@+id/tvDiscnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgcouponinfo"
        android:layout_alignStart="@+id/imgcouponinfo"
        android:layout_below="@+id/imgcouponinfo"
        android:layout_marginTop="10dp"
        android:text="Discount/Offers :"
        android:textColor="#7f0000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tvDiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvDiscnt"
        android:layout_alignStart="@+id/tvDiscnt"
        android:layout_below="@+id/tvDiscnt"
        android:layout_marginTop="10dp"
        android:text="10% Discount"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <ListView
        android:id="@+id/couponinfolist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvbuy"
        android:layout_below="@+id/tvDiscount"
        android:layout_marginTop="10dp"
        android:divider="#7f0000"
        android:dividerHeight="1dp" />

    <TextView
        android:id="@+id/tvbuy"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#F8BBD0"
        android:gravity="center"
        android:text="Buy Membership"
        android:textColor="#7f0000"
        android:textSize="20dp" />

</RelativeLayout>